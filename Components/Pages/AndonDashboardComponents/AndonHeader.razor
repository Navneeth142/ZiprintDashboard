<div class="andon-header">

    <!-- LEFT GROUP: Logo + Title SIDE BY SIDE -->
    <div class="andon-header-left">
        <img src="images/Chamundi_image.png"
             class="andon-logo"
             alt="Chamundi Logo" />

        <div class="andon-title">
            <div class="andon-main">ANDON</div>
            <div class="andon-sub">Dashboard</div>
        </div>
    </div>

    <!-- RIGHT GROUP: META -->
    <div class="meta">
        <div class="meta-item">
            <label>Date</label>
            <span>@Date.ToString("dd-MM-yyyy")</span>
        </div>

        <div class="meta-separator"></div>

        <div class="meta-item">
            <label>Time</label>
            <span>@Date.ToString("hh:mm tt")</span>
        </div>

        <div class="meta-separator"></div>

        <div class="meta-item">
            <label>Plant</label>
            <span>CDC - 01</span>
        </div>

        <div class="meta-separator"></div>

        <div class="meta-item">
            <label>Shift</label>
            <span>S - 01</span>
        </div>
    </div>

</div>

@code {
    [Parameter] public DateTime Date { get; set; }
}
